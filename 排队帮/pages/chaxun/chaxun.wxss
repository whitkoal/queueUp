/* pages/chaxun/chaxun.wxss */
page{
  background-color: #f5f5f5;
}
.chaxun{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top:10px; 
  width: 100%;
  height: 100%;
}
.chaxuntext{
  background-color: #ffffff;
  width:80%;
  height: 200rpx;
  margin-top: 100rpx;
  justify-content: center;
  display: -webkit-flex;
  align-items: center;
  border-radius: 25px;
  box-shadow: 20px 22px 24px #808080;
  font-size: 25px;
}


.cxone{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top:10px; 
  width: 100%;
  height: 100%;
}
.chaxundiv{
  background-color: #ffffff;
  width:80%;
  height: 500rpx;
  justify-content: center;
  display: -webkit-flex;
  align-items: center;
  border-radius: 25px;
  box-shadow: 20px 22px 24px #808080;
  margin-top:100px; 
}
.moreuser{
  margin-top: 0px;
  font-size: 30px;
  margin-left:20px; 
}
.moreuser2{
  font-size: 40px;
  color:#ff0000;
}
.moreuser3{
  font-size: 30px;
  color:#000000;
}
.chaxunbtn{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top:10px; 
  width: 100%;
  height: 100%;
} 
.cxbtn{
  padding:-20px 10px;
  font-size:20px;
  cursor:pointer;
  text-decoration: none;
  outline:none;
  color:#f0f8a3;
  background-color:#000000;
  border-radius: 500px;
  box-shadow:0 9px #999;
}
.cxbtn:hover{
  background-color:#000000
}
.cxbtn:active{
  background-color: #000000;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}