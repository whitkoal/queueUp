page {
  font-size: 35rpx;
   background-color: #f5f5f5;
}

input:hover {
  border: 1px solid rgb(0, 0, 0);
}
.paiduiinp{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top:10px; 
  width: 100%;
  height: 100%;
}
.paiduidiv{
  background-color: #ffffff;
  width:75%;
  height: 700rpx;
  margin-top: 300rpx;
  justify-content: center;
  display: -webkit-flex;
  align-items: center;
  border-radius: 25px;
  box-shadow: 0 16px 50px 0 rgba(0,0,0,0.24),0 20px 50px 0 rgba(0,0,0,0.19);
}
.container-info {
   padding: 5%;
 }
 
 .man-form-info {
   display: flex;
   flex-wrap: wrap;
   justify-content: center;
   margin-top: 5px;
 }
 
 .man-form-info .queid {
   display: flex;
   width: 90%;
   flex-wrap: wrap;
   margin-top: 5%;
   margin-left:15%;
 }

 .man-form-info input {
   width: 90%;
   border:1px solid #131212 ;
   border-radius: 10px;
   margin-top:10px;
   font-size:30rpx;
 }

.submit-form-info {
  display: flex;
  justify-content: center;
}

.submit-form-info button {
  
  margin-top: 30px;
  margin-left: 5px;
  display: inline-block;
  padding:0px 50px;
  font-size:24px;
  cursor:pointer;
  text-decoration: none;
  outline:none;
  color:#ffffff;
  background-color:#131212;
  border-radius: 50px;
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);

}