<view class='' wx:if="{{isSwiper}}">
  <swiper class="card-swiper bg-img {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#ffffff" style="background-image: url('//hbimg.huabanimg.com/cb400ae675027476cef23178d2cd100c9db842bc26f75-giAK1k_fw658');height: 414rpx;">
    <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item" bindtap='tapSwiper' data-index='{{item.id+1}}'>
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}" class='shadow bg-white'></image>
      </view>
    </swiper-item>
  </swiper>
</view>
<!-- 宫格 -->
<view class="cu-list grid col-{{gridCol}} ">
  <view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<gridCol*2}}" bindtap="tapClick" data-method="{{item.method}}">
    <view class="cuIcon-{{item.icon}} text-{{item.color}}">
      <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
        <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
      </view>
    </view>
    <text>{{item.name}}</text>
  </view>
</view>

<!-- 导航栏 -->
<view class="bg-white nav solid-bottom margin-top">  
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabList}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      <view class=''>{{item.name}}</view>
    </view>
  </view>
</view>

<!-- 店铺卡片 -->
  <!-- 授权位置 -->
<view wx:if='{{!hiddenReAuthorizePop}}'>
  <button bindtap='openLocationSetting'class="bg-blue">需要您授权位置信息</button>
</view>
  <!-- 加载卡片 -->
<view wx:if='{{havePower}}'>

  <view wx:for="{{storeList}}" wx:key>
    <view class="cu-card solid-bottom article {{isCard?'no-card':''}} shadow-lg" bindtap='showStore' data-detail='{{item.store}}'>
      <view class="cu-item">
        <view class="title">
          <view class="text-cut">{{item.store.storeName}}</view>
        </view>
        <view class="content">
          <image src="{{item.store.storeImgurl}}" mode="aspectFill"></image>
          <view class="desc">
            <view class="text-content">{{item.store.storeIntroduce}}</view>
            <view>
              <view class="cu-tag bg-red light sm round {{bg-item.color}}" wx:for='{{item.tagList}}' wx:key='{{item.tagId}}'>{{item.tagIntroduce}}
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <view class="cu-load bg-gray radius light {{!isLoad?'loading':'over'}}" wx:if="{{hasLoading}}"></view>
  <view class="cu-load bg-red erro radius light" wx:if="{{hasErro}}"></view>
</view>

</scroll-view>

